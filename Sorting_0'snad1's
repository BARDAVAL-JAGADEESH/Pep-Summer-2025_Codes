#include<bits/stdc++.h>
using namespace std;
void sortingarray(int arr[],int size)
{
	int start=0;
	int end=size-1;
	//int step=0;
	while(start<end)
	{
	while(arr[start]==0 &&start <end)
		{
			start++;
		}
		while(arr[end]==1 &start <end)
		{
			end--;
		}
		//if(arr[start]==1&& arr[end] && start<end){
		swap(arr[start],arr[end]);
	     start++;
	     end--;
}
}
void printingArray(int arr[],int size)
{
	for(int i=0;i<size;i++)
	{
		cout<<arr[i]<<" ";
	}
	cout<<endl;
}
int main()
{
	int arr[8]={0,1,1,0,0,1,0};
	 sortingarray(arr,8);
	 printingArray(arr,8);
	 
	return 0;
}
