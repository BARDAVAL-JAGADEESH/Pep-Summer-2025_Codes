#include<iostream>
using namespace std;
void alternativeswap(int arr[],int n){
	for(int i=0;i<n-1;i+=2){
		
			swap(arr[i],arr[i+1]);
		
	}
}
	void printing (int arr[],int n){
		for(int i=0;i<n;i++){
			cout<<arr[i]<<" ";
		}
		
	}

int main(){
	int arr[5]={1,3,4,6,7};
	alternativeswap(arr,5);
	printing(arr,5);
	
}
