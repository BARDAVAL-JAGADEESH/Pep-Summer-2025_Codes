    int start= 0,
       mid = 0, 
       end= arr.size()-1;
      while (mid <= end) {
          if (arr[mid] == 0) {
              swap(arr[mid], arr[start]);
            
              start++;
              mid++;
          }
          else if (arr[mid] == 1) {
              mid++;
          }
          else if (arr[mid] == 2) {
              swap(arr[mid], arr[end]);
              end--;
          }
      }
      }
